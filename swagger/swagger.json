{
  "openapi": "3.0.1",
  "info": {
    "title": "Tag Open API",
    "description": "Swagger Tag Minimal API for GQL",
    "contact": {
      "name": "awesome",
      "url": "http://www.awesome.com",
      "email": "dev@awesome.com"
    },
    "version": "v1"
  },
  "paths": {
    "/api/tags": {
      "get": {
        "tags": [
          "TagsEndpoint"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Tag"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/tags/{tagName}": {
      "post": {
        "tags": [
          "TagsEndpoint"
        ],
        "parameters": [
          {
            "name": "tagName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateTagResult"
                }
              }
            }
          }
        }
      }
    },
    "/api/tags/{id}": {
      "delete": {
        "tags": [
          "TagsEndpoint"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateTagResult": {
        "type": "object",
        "properties": {
          "tag": {
            "$ref": "#/components/schemas/Tag"
          },
          "isCreated": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "Tag": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}